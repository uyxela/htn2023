{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "backend/*": ["*"],
      "common/*": ["../common/*"]
    }
  },
  "include": ["**/*.ts", "**/*.json"],
  "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
  "exclude": ["node_modules", ".build"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs"
    },
    "files": true
  }
}
